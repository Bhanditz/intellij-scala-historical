<idea-plugin>
  <id>org.intellijhocon</id>
  <name>HOCON</name>
  <description>Enables support for HOCON (Human-Optimized Config Object Notation)</description>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="intellijhocon.HoconFileTypeFactory"/>
    <lang.syntaxHighlighterFactory key="HOCON" implementationClass="intellijhocon.HoconSyntaxHighlighterFactory"/>
    <lang.parserDefinition language="HOCON" implementationClass="intellijhocon.HoconParserDefinition"/>
    <lang.braceMatcher language="HOCON" implementationClass="intellijhocon.HoconBraceMatcher"/>
    <lang.foldingBuilder language="HOCON" implementationClass="intellijhocon.HoconFoldingBuilder"/>
    <quoteHandler fileType="HOCON" className="intellijhocon.HoconQuoteHandler"/>
    <annotator language="HOCON" implementationClass="intellijhocon.HoconSyntaxHighlightingAnnotator"/>
    <additionalTextAttributes scheme="Default" file="colorSchemes/HoconDefault.xml"/>
    <additionalTextAttributes scheme="Darcula" file="colorSchemes/HoconDarcula.xml"/>
    <colorSettingsPage implementation="intellijhocon.HoconColorSettingsPage"/>
  </extensions>

</idea-plugin>
